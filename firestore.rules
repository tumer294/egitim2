rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Other rules can go here

    // This rule allows a user to manage documents under their own user ID.
    // It's the foundation for user-specific data.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Explicitly allow users to create documents in their own 'surveys' subcollection.
    // This is more specific and reliable than relying on the wildcard above for creation.
    match /users/{userId}/surveys/{surveyId} {
        allow create: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows any authenticated user to read from the 'forum' collection.
    match /forum/{postId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && (request.auth.token.admin == true || request.resource.data.author.uid == request.auth.uid);
    }
    
    // This rule allows users to manage replies and comments if they are authenticated.
    match /forum/{postId}/replies/{replyId}/{document=**} {
       allow read, write: if request.auth != null;
    }

    // Notifications can be read by any authenticated user, but only created/deleted by an admin.
    match /notifications/{notificationId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth.token.admin == true;
    }
  }
}
